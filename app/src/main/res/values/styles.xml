<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextStyle">
        <item name="android:layout_width">137dp</item>
        <item name="android:layout_height">76dp</item>
        <item name="android:layout_marginStart">138dp</item>
        <item name="android:layout_marginTop">28dp</item>
        <item name="android:layout_marginEnd">138dp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:padding">@dimen/text_padding</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="EditStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:padding">@dimen/text_padding</item>
        <item name="android:textAlignment">center</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="buttonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/text_margin</item>
        <item name="android:layout_marginStart">144dp</item>
        <item name="android:layout_marginEnd">144dp</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:padding">@dimen/text_padding</item>
    </style>

</resources>
